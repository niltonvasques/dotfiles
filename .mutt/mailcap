# MS Word documents
application/msword; libreoffice %s
application/ppt; libreoffice %s
application/vnd.ms-powerpoint; libreoffice %s
application/x-mspowerpoint; libreoffice %s
application/xls; libreoffice %s
application/vnd.ms-excel; libreoffice %s

# Images
image/jpg; eog %s jpg
image/jpeg; eog %s jpg
image/pjpeg; eog %s jpg
image/png; eog %s png
image/gif; eog %s gif

# PDFs
application/pdf; evince %s 

# HTML
text/html; firefox %s 

# Unidentified files
application/octet-stream; ~/.mutt/view_attachment.sh %s "-"
